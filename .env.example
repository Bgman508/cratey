# ============================================
# CRATEY - Production Environment Configuration
# ============================================

# Client Environment Variables
VITE_API_BASE_URL=https://your-api-domain.com/api

# Server Environment Variables
PORT=3001
CLIENT_URL=https://your-frontend-domain.com
NODE_ENV=production

# REQUIRED: JWT Secret (generate a strong random string)
# Use: openssl rand -base64 64
JWT_SECRET=

# REQUIRED: Stripe Configuration (get from https://dashboard.stripe.com/apikeys)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PUBLISHABLE_KEY=

# OPTIONAL: Email Configuration (for purchase confirmations)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=noreply@yourdomain.com

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=50000000

# Audio Preview Configuration
AUDIO_PREVIEW_DURATION=30
